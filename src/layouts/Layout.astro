---
import '../styles/global.css';
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Portfolio | Nicol√°s Castillo</title>
	</head>
	<body class="min-h-screen font-onest relative overflow-x-hidden text-[#f3f4f6]">
		<!-- Fondo decorativo con gradientes y textura -->
		<div class="pointer-events-none fixed inset-0 -z-10 h-full w-full" style="background: #18181b;">
			<!-- Gradiente radial esquina superior izquierda -->
			<div class="absolute top-[-15%] left-[-15%] w-[500px] h-[500px] rounded-full opacity-30 blur-2xl" style="background: radial-gradient(circle at 30% 30%, #7c3aed 0%, #18181b 80%);"></div>
			<!-- Gradiente radial esquina inferior derecha -->
			<div class="absolute bottom-[-15%] right-[-15%] w-[500px] h-[500px] rounded-full opacity-20 blur-2xl" style="background: radial-gradient(circle at 70% 70%, #a78bfa 0%, #18181b 80%);"></div>
			<!-- Textura de puntos SVG -->
			<div class="absolute inset-0 w-full h-full opacity-10" style="background-image: url('data:image/svg+xml;utf8,<svg width=\'40\' height=\'40\' viewBox=\'0 0 40 40\' fill=\'none\' xmlns=\'http://www.w3.org/2000/svg\'><circle cx=\'2\' cy=\'2\' r=\'2\' fill=\'%23a78bfa\' fill-opacity=\'0.3\'/></svg>'); background-size: 40px 40px;"></div>
		</div>
		<slot />
	</body>
</html>

